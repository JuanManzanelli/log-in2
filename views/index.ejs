<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS</title>
</head>
<body>
    <% if (form) { %>
    <div>
        <a href="/"><button>Ver Productos</button></a>
    </div> 
    <h3>Formulario</h3>
    <%- include("./partials/form.ejs") %> 
    <% } %> 

    <% if (!form) { %>
    <div>
        <a href="form"><button>Ver Formulario</button></a>
    </div>   
    <div style="display: flex; flex-wrap: wrap; padding: 5px; background-color: darkslategrey">
        <% products.forEach(item => { %>
            <div>
                <div style="height: 250px; width: 250px; margin:16px;">
                    <img src=<%= item.picture %> alt=<%= item.id %> style="width: 100%; min-height: 100%; max-height: 100%; border-radius: 25px">
                </div>
                <h3 style="font-family: monospace; text-align: center; font-size:large; color:whitesmoke"><%= item.nombre %></h3>
                <h4 style="font-family: monospace; text-align: center; font-size:large; color:whitesmoke">$<%= item.precio %></h4>
            </div>
        <% }); %>
    </div>
    <% } %> 




</body>
</html>